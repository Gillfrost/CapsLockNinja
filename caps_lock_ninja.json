      "description": "Caps to Hyper/Esc",
      "manipulators": [
        {
          "description": "Caps to Hyper / Esc if alone",
          "type": "basic",
          "from": {
            "key_code": "caps_lock",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "right_shift",
              "modifiers": [
                "right_control",
                "right_option",
                "right_command"
              ],
              "lazy": true
            }
          ],
          "to_if_alone": [
            {
              "key_code": "escape"
            }
          ]
        }
      ]
    },
